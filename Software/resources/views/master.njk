<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <title>KolbFinder Project</title>

  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900' rel='stylesheet' type='text/css'>
  <link rel="icon" href="/assets/logokf.png" type="image/x-icon">
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>

  <section>

      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
		  <div style="text-align: right;">
			<a href="/"><h1 style="overflow: hidden;">KolbFinder</h1></a>
			<img style="position: absolute; top: 10px; left: 40px; height: 60px;" class="img-responsive" src="assets/logokf.png"></img>
		</div>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <div class="nav navbar-nav navbar-right">
			{% if currentUser %}
				Hola {{ currentUser.username }}!
				<a href="/logout">Logout</a>
			{% endif %}
          </div>
        </div><!--/.nav-collapse -->
      </div>
    


    <div class="__wrapper" style="margin-top: 40px; margin-left: 20px; margin-right: 20px;">
      {% block content %}{% endblock %}

      {% block footer %}
        <div class="__footer">
          <ul>
            <li>
              <a href="https://github.com/felipeavaria/kolbfinder" target="_blank"><img src="/assets/github.svg"></a>
            </li>
          </ul>
        </div>
      {% endblock %}
    </div>
  </section>

</body>
</html>
